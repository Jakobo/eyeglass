{
    "compilerOptions": {
        "baseUrl": ".",
        "downlevelIteration": true,
        "moduleResolution": "node",
        "outDir": "./lib",
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "lib": [
            "es6"
        ],
        "target": "es5",
        "sourceMap": true,
        "paths": {
            "node-sass": ["@types/node-sass"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}